mapscripts DungeonTutorial_Act1_Shop1_Fork_MapScripts {
    MAP_SCRIPT_ON_TRANSITION {
        genrandomshop(0)
        setvar(VAR_TEMP_0, 0)
    }
    MAP_SCRIPT_ON_FRAME_TABLE [
        VAR_TEMP_0, 0 {
            lock
            applymovement(OBJ_EVENT_ID_PLAYER, Common_UpOne)
            waitmovement(0)
            msgbox(format("The room behind you collapsed! \p"
                          "...\p"
                          "Two merchants seem to have taken up shop here."))
            setvar(VAR_TEMP_0, 1)
            release
        }
    ]
}
